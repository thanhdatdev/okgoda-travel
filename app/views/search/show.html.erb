                              <div class="f-left l"><% image_tag "i-dep.png" %></div>
                              <div class="f-left r">Nơi khởi hành:
                                <span class="font500"><%= tour.departure %></span></div>
                              <div class="clear"></div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-1 col-md-1 hidden-sm hidden-xs"></div>
              </div>
            <% end %>
          </div>
        </div>
        <!-- <script src="/Content/ThemeHe/js/jquery.scrollTo.js"></script> -->
        <script type="text/javascript">
          $(function () {
            $('[data-toggle="tooltip"]').tooltip()
          })
          $(document).ready(function () {
            $.scrollTo(document.getElementById('searchResult'), 10, {offset: -10});
            //var arrDiv = ['#tagMax192', '#tagMax193', '#tagMax194', '#tagMax195', '#tagMax196', '#tagMax199', '#tagMax200', '#tagMax201', '#tagMax202']; var arrTour = [1149, 1483, 2111, 2739, 2906];
            $(function () {
              $('[data-toggle="tooltip"]').tooltip()
            })
            var arrDiv = [
              '#tagMax147',
              '#tagMax148',
              '#tagMax149',
              '#tagMax153',
              '#tagMax154',
              '#tagMax155',
              '#tagMax160',
              '#tagMax161',
              '#tagMax162',
              '#tagMax163',
              '#tagMax165',
              '#tagMax167',
              '#tagMax168'
            ];
            var arrTour = [];
            for (var i = 0; i < arrDiv.length; i++) {
              arrTour.push($(arrDiv[i]).offset().top);
            }

            var distanceMax = 0;
            $(window).scroll(function () {
              //lay ra div gan TOP nhat
              var id = getDivCurrent($(document).scrollTop());
              resetDiv();
              if (id != -1) {
                $(arrDiv[id]).addClass('affixOld');
              }
              var scroll = $(document).scrollTop();
              var sortHeaderPosition = $("#sortHeader").offset().top;
              if (scroll > sortHeaderPosition) {
                $('#divFixHeader').addClass('sort-tour-fixed');
                $('#divFixHeader').show();
              } else {
                $('#divFixHeader').removeClass('sort-tour-fixed');
                $('#divFixHeader').hide();
              }
            });

            function getDivCurrent(scrTop) {
              //Vị trí cuoi cùng của item
              var endPosition = $("#divEndTour").offset().top - 200;

              var result = -1;
              //Duyet mang Array
              for (var i = 0; i < arrTour.length; i++) {
                if (scrTop >= arrTour[i] && scrTop < endPosition) {
                  result = i;
                }
              }
              return result;
            }

            function resetDiv() {
              for (var i = 0; i <= arrDiv.length; i++) {
                $(arrDiv[i]).removeClass('affixOld');
              }
            }

            $('.group-listtour .rateit').bind('rated reset', function (e) {
              var ri = $(this);

              //if the use pressed reset, it will get value: 0 (to be compatible with the HTML range control), we could check if e.type == 'reset', and then set the value to  null .
              var value = ri.rateit('value');
              var tourid = ri.data('tourid'); // if the product id was in some hidden field: ri.closest('li').find('input[name="tourid"]').val()

              //maybe we want to disable voting?
              ri.rateit('readonly', true);

              $.ajax({
                url: '/Tour/UpdateRatingByTourId', //your server side script
                data: {
                  tourid: tourid,
                  value: value
                }, //our data
                type: 'POST',
                success: function (data) {
                  alert('Cảm ơn quý khách đã bình chọn cho điểm đến này với điểm số ' + data);
                },
                error: function (jxhr, msg, err) {}
              });
            });
          });
        </script>
