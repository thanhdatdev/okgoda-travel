                              <div class="f-left l"><% image_tag "i-price.png", alt: "price" %></div>
                              <div class="f-left r">
                                Giá:
                                <span class="font500 price"><%= tour.price.to_s.reverse.gsub(/(\d{3})(?=\d)/, '\\1,').reverse %> đ</span>
                              </div>
                              <div class="clear"></div>
                            </div>
                            <div class="col-md-5 col-sm-5 col-xs-12">
                              <div class="f-left l"><% image_tag "i-calendar.png", alt: "date" %></div>
